/* pages/uploadtxt/uploadtxt.wxss */
.picker{
   color: #666;
   position:absolute;
   right:0
}
.panel-title{
  font-size: 14px;
  line-height: 1;
  color: #999;
  padding: 20px 15px 10px 15px;
}
.upload-content{
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.upload-content>text{
  font-size: 10px;
  color: #aaa;
  padding: 20px 15px 10px 15px;
  width: 80%;
  line-height: 1;
}
.upload-content>image{
  width: 160rpx;
   height: 160rpx;
   padding-left: 20px;
   padding-bottom: 30px;
}
.btn-commit{
  margin-top: 80rpx;
 padding-left: 60rpx;
 padding-right: 60rpx;
}

.upload-contents{
width: 100%;
display: flex;
flex-direction: row;
flex-wrap: wrap;
padding: 20rpx;
}
.upload-contents-item{
  height: 250rpx;
  width: 250rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.upload-contents-item>image{
  height: 200rpx;
  width: 200rpx;
}
