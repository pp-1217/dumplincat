.upload-contents{
width: 100%;
display: flex;
flex-direction: row;
flex-wrap: wrap;
padding: 20rpx;
}
.upload-contents-item{
  height: 250rpx;
  width: 250rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.upload-contents-item>image{
  height: 200rpx;
  width: 200rpx;
}



.pop-content-total{
  width: 700rpx;
  height: 90%;
  background-color: #fff;
}
.pop-content-scroll{
  /* height: 50%; */
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
  justify-content: center;
  align-items: center;
}
.pop-content{
  color:#666;
  overflow:hidden;
  font-size:14px;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.pop-content-title{
  color: #000;
  font-size: 18px;
  text-align: center;
  padding-top: 30rpx;
}
.pop-content-content{
  overflow: scroll;
  height: 840rpx;
}
.pop-content-end{
  align-self: flex-end;
  margin-right: 60rpx;
  
}

.pop-scroll-bottom{
  display: flex;
  flex-direction: row;
  width: 90%;
  padding: 20rpx;

}
.pop-scroll-bottom zan-button{
  flex-grow: 1;
}
