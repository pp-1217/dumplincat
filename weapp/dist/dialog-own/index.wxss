.hidden {
    display: none;
}

@keyframes appear {
    from {
        opacity: 0
    }

    to {
        opacity: 1;
    }
}

.wrapper {
    position: absolute;
    z-index: 20;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, .2);
    animation: appear .3s forwards ease;
}

.dialog {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}