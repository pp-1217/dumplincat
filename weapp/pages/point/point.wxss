/* pages/point/point.wxss */
.point-top{
width: 100%;
height: 320rpx;
background-color: #4A90E2;
display: flex;
align-items: center;
justify-content: center;

}
.point-top-center{
  display: flex;
  flex-direction: column;
  align-items: center;
justify-content: center;
}
.point-top-center text{
  font-size: 14pt;
  color: #fff;
  margin-top: 20rpx;
}

.point-items{
display: flex;
flex-direction: row;
width: 100%;
flex-wrap: wrap;

}
.point-item-center{
  display: flex;
  flex-direction: column;
  align-items: center;
justify-content: center;
}
.point-item{
  flex-grow: 1;
  width: 300rpx;
  height: 300rpx;
 display: flex;
  align-items: center;
justify-content: center;
margin: 1px;
background-color: #fff;
}
.point-good-pic{
  width: 120rpx;
  height: 120rpx;
}
.point-good-point{
  color: #4A90E2;
  font-size: 8pt;
  margin-top: 10rpx;
}
.point-good-name{
font-size: 10pt;
  margin-top: 10rpx;
}