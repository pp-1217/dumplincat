/* pages/repairrecord/index.wxss */

.btn-commit{
  margin-top: 60rpx;
 padding-left: 40rpx;
 padding-right: 40rpx;
margin-bottom: 60rpx;

}
.upload-content{
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.upload-content>text{
  font-size: 10px;
  color: #aaa;
  padding: 20px 15px 10px 15px;
  width: 80%;
  line-height: 40rpx;
}
.upload-content>image{
  width: 160rpx;
   height: 160rpx;
   padding-left: 20px;
   padding-bottom: 30px;
}
.upload-contents{
width: 100%;
display: flex;
flex-direction: row;
flex-wrap: wrap;
padding: 20rpx;
}
.upload-contents-item{
  height: 250rpx;
  width: 250rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.upload-contents-item>image{
  height: 200rpx;
  width: 200rpx;
}



.btn-bottom{
  margin: 20rpx;
  padding: 40rpx;
}